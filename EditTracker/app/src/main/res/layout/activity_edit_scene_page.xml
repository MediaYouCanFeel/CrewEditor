<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mycf.edittracker.EditScenePage">

    <TextView
        android:id="@+id/textView_proj_title"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:text="PROJECT_TITLE"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView_add_new_scene"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:text="EDIT SCENE INFO"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_proj_title"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView_new_scene_number"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:text="SCENE NUMBER"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_add_new_scene"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/editText_new_scene_number"
        android:layout_width="215dp"
        android:layout_height="43dp"
        android:ems="10"
        android:inputType="number"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_new_scene_number"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView_new_scene_location"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:text="SCENE LOCATION"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/editText_new_scene_number"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/editText_new_scene_location"
        android:layout_width="215dp"
        android:layout_height="43dp"
        android:ems="10"
        android:inputType="textCapWords"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_new_scene_location"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView_new_scene_time"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:text="SCENE TIME"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/editText_new_scene_location"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/editText_new_scene_time"
        android:layout_width="215dp"
        android:layout_height="43dp"
        android:ems="10"
        android:inputType="textCapWords"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_new_scene_time"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/edit_scene_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CANCEL"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/editText_new_scene_time"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/edit_scene_create_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="32dp"
        android:text="SAVE"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_new_scene_time" />

    <ImageButton
        android:id="@+id/imageButton_delete_scene"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_delete"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/editText_new_scene_time"
        app:layout_constraintLeft_toRightOf="@+id/edit_scene_create_button"
        android:layout_marginLeft="20dp" />


</android.support.constraint.ConstraintLayout>
